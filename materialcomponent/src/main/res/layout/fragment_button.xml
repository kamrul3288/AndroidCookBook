<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/incTopAppbar"
        layout="@layout/top_appbar_center_titled"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:padding="@dimen/_16sdp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incTopAppbar">

        <Button
            style="@style/Ds.Button.ElevatedButton"
            android:id="@+id/elevatedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elevated button" />

        <Button
            style="@style/Ds.Button.ElevatedButton"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elevated button" />

        <Button
            style="@style/Ds.Button.FilledRounded"
            android:layout_marginTop="8dp"
            app:iconGravity="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rounded Filled button" />

        <Button
            style="@style/Ds.Button.TonalButton"
            android:layout_marginTop="8dp"
            app:iconGravity="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tonal Button" />

        <Button
            style="@style/Ds.Button.OutlinedButton"
            android:layout_marginTop="8dp"
            app:iconGravity="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Outlined Button" />

        <Button
            style="@style/Ds.Button.Filled"
            android:layout_marginTop="8dp"
            app:iconGravity="textStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filled Button" />

        <Button
            style="@style/Ds.Button.Text"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            app:iconGravity="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Button" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>